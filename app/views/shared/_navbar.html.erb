<div class="max-w-6xl mx-auto w-full py-4 px-4">
  <% if user_signed_in? %>
    <div
      class="flex items-center justify-between bg-indigo-100 dark:bg-indigo-900 border border-indigo-300 dark:border-indigo-700 rounded-lg p-6 shadow-sm">
      <div class="text-sm text-indigo-800 dark:text-indigo-300">
        <p class="font-semibold">
          Logado como: <span class="underline">
            <%= current_user.email %>
          </span>
        </p>
      </div>
      <div>
        <%= button_to "Sair", destroy_user_session_path, method: :delete,
          class: "inline-block px-4 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-md transition"
          %>
      </div>
    </div>
  <% else %>
    <div
      class="flex items-center justify-between bg-red-100 dark:bg-red-900 border border-red-300 dark:border-red-700 rounded-lg p-6 shadow-sm">
      <p class="text-sm font-semibold text-red-800 dark:text-red-300">
        Você não está logado.
      </p>
    </div>
  <% end %>
</div>