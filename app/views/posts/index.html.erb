<div class="max-w-7xl w-full mx-auto py-7 flex flex-col">
  <% if user_signed_in? && current_user.admin? %>
    <div class="flex mr-auto mb-8">
      <%= link_to "Create Blog Post", new_admin_post_path,
        class: "text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 cursor-pointer"
        %>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    <%= render partial: "post", collection: @posts %>
  </div>
</div>